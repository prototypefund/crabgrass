%html
  %head
    %meta{ charset: 'utf8' }
    %link{ rel: :stylesheet, type: :"text/css", href: css_file }

  %body
    %img{ src: "assets/#{group.name}.jpg",  alt: 'avatar', height: '64', width: '64' }
    %h1= "Archive of #{group.display_name}"

    -# Todo: hide if wikis are empty
    %h3= :private_wiki.t
    %p= group.private_wiki.body_html if group.private_wiki&.has_content?
    %h3= :public_wiki.t
    %p= group.public_wiki.body_html if group.public_wiki&.has_content?

    %h2= :pages.t
    %table
      %tr
        %th= :title.t
        %th= :updated
      - pages.each do |page|
        %tr
          %td
            %a{ href: "#{page.name_url}.html" } #{page.title}
          %td
            #{page.updated_by.display_name}
          %td
            #{page.updated_at}
    - if group.council
      %h2= h(:council.t)
      -# unless group_pages(group.council).empty?
      %a{ href: "#{group.council.name}/index.html"} #{group.council.display_name}
    - if group.real_committees.any?
      %h2= :committees.t
      - group.children.each do |committee|
        -# unless group_pages(committee).empty?
        %a{ href: "#{committee.name}/index.html" } #{committee.display_name}

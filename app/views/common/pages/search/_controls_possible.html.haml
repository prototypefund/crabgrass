%ul#search_controls_possible.page_search_controls
  - unless show_all?
    = filter_checkbox_li_tag :add, filter_all
  - for section in search_filter_sections
    - enabled_filters, disabled_filters = possible_filters_for_section(section)
    - id = "#{section}_section"
    - if enabled_filters.any? || disabled_filters.any?
      %li
        .section= section.tcap
        %ul
          - for filter in enabled_filters
            = filter_checkbox_li_tag :add, filter
          - for filter in disabled_filters
            = filter_checkbox_li_tag :add, filter, nil, disabled: true
